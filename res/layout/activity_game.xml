<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" android:orientation="horizontal">

        <fragment
            android:name="com.absolom.ricochet.ui.GameBoardFragment"
            android:layout_width="800dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tag="gameBoardFragmentId" />

        <fragment
            android:name="com.absolom.ricochet.ui.GamePaneFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:tag="gamePaneFragmentId" />
   
</LinearLayout>